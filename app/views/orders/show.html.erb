<p style="color: green"><%= notice %></p>

<%= render @order %>

<div>
  <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-light btn-sm rounded-1 me-2" %>
  <%= link_to "Back to orders", orders_path, class: "btn btn-light btn-sm rounded-1 me-2" %>
  <%= link_to "Back to customer", customer_path(@order.customer_id), class: "btn btn-light btn-sm rounded-1 me-2" %>
  <%= button_to "Delete this order", @order, method: :delete, class: "btn btn-danger btn-sm rounded-1 mt-3" %>
</div>